mixin certificateSlider(params)
    .slider.custom-slider.js-custom-slider(class=params.theme ? 'dark' : '')
        if(params.params.isNeedBtn)
            .slider-controls.custom-slider__controls
                button(type=button).custom-slider__prev назад
                button(type=button).custom-slider__next вперед
        .custom-slider__slider-track
            each val in params.list
                .slider__item
                    a(href="#").certificate
                        img(src=val.img alt="сертификат")
        if(params.params.isNeedBullet)
            ul.custom-slider__bullet-list

