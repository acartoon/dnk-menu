mixin markerNavSwitch(name)
    button(type=button class=name)&attributes(attributes).marker-nav-switch
        +_name(name)
        i._icon
            <svg width="100%" height="100%" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" clip-rule="evenodd" d="M14 8C14 11.3137 11.3137 14 8 14C4.68629 14 2 11.3137 2 8C2 4.68629 4.68629 2 8 2C11.3137 2 14 4.68629 14 8ZM7 7V5H9V7H11V9H9V11H7V9H5V7H7Z" fill="#D9D9D6"/>
            </svg>

mixin _name(name)
    span.marker-nav-switch__title
        if(name == names.DEFAULT)
            | продукция
        else if (name == names.MERLO)
            include merlo.svg
        else if (name == names.PISTENBULLY)
            include pistenbully.svg
        else if (name == names.REFORM)
            include reform.svg
        else if (name == names.FAE)
            include fae.svg
